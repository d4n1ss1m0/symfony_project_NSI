<div class="d-flex flex-row-reverse">
<button type="button" class="btn btn-outline-primary " data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="getAddForm('add_user')" >Add user</button>

</div>
<div class="my_table mt-3">
<table class="table table-striped shadow bg-body rounded">
  <tr>
    <th>id</th>
    <th>Email</th>
    <th>Password</th>
    <th>Roles</th>
    <th></th>
    <th></th>
  </tr>
{% if users is defined %}
  {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td>{{ user.email }}</td>
      <td style="word-break:break-all">{{ user.password }}</td>
      <td>{{ user.Roles | json_encode() }}</td>
      <td><button type="button" class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="getEditForm('edit_user',{{user.id}})">Edit</button></td>
      <td><button type="button" class="btn btn-danger" onclick="deleteUser({{user.id}})">Delete</button></td>
    </tr>
  {% endfor %}
{% endif %}
</table>
</div>
{% endblock %}
